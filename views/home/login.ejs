<%- include('../_partial/_header'); -%>
    <div id = form_login class="col-md-8">
        <div class="panel panel-default">

            <div class="panel-heading">
                <center>
                    <h3>Enter your username and password.</h3>
                </center>
            </div>
            <div class="panel-body">
                <form class="form-signin" method="POST" action="/login">
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">@</span>
                        <input type="text" class="form-control" placeholder="Username" name="username" aria-describedby="basic-addon1">
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-lock"
                            aria-hidden="true"></span></span>
                        <input type="password" class="form-control" placeholder="Password" name="password" aria-describedby="basic-addon1">
                    </div>
                    <% if (warn_login){ %>
                        <div class="alert alert-danger" role="alert"> Wrong username or password. Try again</div>
                    <% } %>
                    <div>
                        <input type="submit" class="btn btn-primary" value="Sign In" />

                    </div>
                    <input type="checkbox" checked="checked"> Remember me

                </form>
            </div>
        </div>
    </div>

    <%- include('../_partial/_footer'); -%>