<%- include('../_partial/_header'); -%>
    <h1 id = "center_text">Enter module information</h1>

    <form class="form-horizontal" method="POST" action="/admin/add_module">
        <div class="form-group">
            <label for="cars" class="col-sm-2 control-label">Choose a professor:</label>
            <div class="col-sm-10">
                <select name="prof_id">
                    <% for (var i=0; i<data_user.length; i++) {%>
                        <% if (data_user[i].TYPE==2){ %> 
                            <option value= <%=  data_user[i].ID_USER %>> <%= data_user[i].USER_NAME %>  </option>
                        <% } %> 
                    <% } %>  
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Name Module</label>
            <div class="col-sm-10">
                <input type="username" class="form-control" id="inputEmail3" placeholder="Module" name="module">
            </div>

        </div>

        <% if (warn_module){ %>
            <div class="alert alert-danger" role="alert"> Module already exists. Try again</div>
            <% } %>
                <div class="form-group">

                    <label for="inputPassword3" class="col-sm-2 control-label">Description</label>
                    <div class="col-sm-10">
                        <input class="form-control" id="inputPassword3" placeholder="Description" name="description">
                    </div>

                </div>
                <div class="form-group">

                    <label for="inputPassword3" class="col-sm-2 control-label">Key</label>
                    <div class="col-sm-10">
                        <input class="form-control" id="inputPassword3" placeholder="Password" name="password">
                    </div>

                </div>


                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Section</label>
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="radio">
                            <label>
                    <input type="radio" name="type" id="optionsRadios3" value="0">
                    STI 3A                        
                    </label>
                        </div>
                        <div class="radio">
                            <label>
                    <input type="radio" name="type" id="optionsRadios3" value="1">
                    STI 4A                        
                    </label>
                        </div>
                        <div class="radio">
                            <label>
                    <input type="radio" name="type" id="optionsRadios3" value="2">
                    STI 5A                        
                    </label>
                        </div>
                        <div class="radio">
                            <label>
                    <input type="radio" name="type" id="optionsRadios3" value="3">
                    MRI 3A                        
                    </label>
                        </div>
                        <div class="radio">
                            <label>
                    <input type="radio" name="type" id="optionsRadios3" value="4">
                    MRI 4A                        
                    </label>
                        </div>
                        <div class="radio">
                            <label>
                    <input type="radio" name="type" id="optionsRadios3" value="5">
                    MRI 5A                        
                    </label>
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-default">ADD Module</button>
                    </div>
                </div>



    </form>

    <%- include ('../_partial/_footer'); -%>