<%- include('../_partial/_header'); -%>

    <h1 id = "center_text">Add new question</h1><br \>

    <form name="my_form" class="form-horizontal" method="POST">

        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Questions</label>
            <div class="col-sm-offset-2 col-sm-10">

                <% for (var i = 0; i < data_question.length; i++){ %>

                    <div class="checkbox">
                        <label>
                    <input type="checkbox" name="type" id="optionsRadios3" value=<%= data_question[i].ID_QUESTION %> >
                            <%= data_question[i].QUESTION %> 
                    </label>
                    </div>
                    <% } %>

            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-default">ADD questions</button>
            </div>
        </div>



    </form>

    <%- include ('../_partial/_footer'); -%>