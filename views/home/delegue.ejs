<%- include('../_partial/_header'); -%>

    <h1>Welcome to delegue page</h1>
    <% for(var i=0;i < data.length; i++){ %>
        <h1>
            <div class="card-deck">
                <div class="card">

                    <div class="card-body">
                        <p class="card-title">Module:
                            <%= data[i].NAME_MODULE %>
                        </p>
                        <h5 class="card-text">Commentaire:
                            <%= data[i].CMT %>
                        </h5>

                        <form class="" method="POST" action="/delegue">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="Accept" id="inlineRadio1" value="Accept">
                                <label class="form-check-label" for="inlineRadio1">Accept</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="Refuse" id="inlineRadio2" value="Refuse">
                                <label class="form-check-label" for="inlineRadio2">Refuse</label>
                            </div>
                            <div>
                                <input type="hidden" name="id_cmt" value=<%=data[i].ID_CMT%> >
                                <input type="submit" class="btn btn-primary" value="Apply" />
                            </div>

                        </form>
                    </div>


                </div>

        </h1>
        <% } %>

            <%- include ('../_partial/_footer'); -%>