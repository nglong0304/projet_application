			for (var y=0; y < data_reponse.length; y++)
			{
				if (data_reponse[y].ID_QUESTION == data_quest_mod[i].ID_QUESTION && data_reponse[y].VALIDE==1)
					count++;
			}
			%>
				<p><%= count %> r√©ponses</p>
			<%
		}
		%>
			<a href="/prof/module/<%= param %>/commentaire">Commentaire</a>
		<%
			var count = 0;
			for (var y=0; y < data_reponse.length; y++)
			{
				if (data_reponse[y].TYPE == 0 && data_reponse[y].VALIDE==1)
					count++;
			}
			%>
            <p>
                <%= count %> commentaires</p>
            <%
	%>
	</div>
